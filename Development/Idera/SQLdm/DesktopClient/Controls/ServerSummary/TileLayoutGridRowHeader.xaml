<UserControl x:Class="Idera.SQLdm.DesktopClient.Controls.ServerSummary.TileLayoutGridRowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="179" d:DesignWidth="23">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border BorderBrush="Silver" BorderThickness="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1" />
        <Image Source="/SQLdmDesktopClient;component/Resources/Chart/row_add_after.png" Width="16" Height="16" VerticalAlignment="Bottom" Margin="0,0,0,5" Name="addRowImage" MouseUp="addRowImage_MouseUp" ToolTip="Insert row" />
        <Image Source="/SQLdmDesktopClient;component/Resources/Chart/row_delete.png" ToolTip="Delete row" Grid.Row="1"  Width="16" Height="16" VerticalAlignment="Top" Margin="0,5,0,0" Name="deleteRowImage" MouseUp="deleteRowImage_MouseUp" />
    </Grid>
</UserControl>
