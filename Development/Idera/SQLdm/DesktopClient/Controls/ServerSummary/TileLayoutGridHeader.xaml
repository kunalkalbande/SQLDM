<UserControl x:Class="Idera.SQLdm.DesktopClient.Controls.ServerSummary.TileLayoutGridHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="21" d:DesignWidth="345">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Silver" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1" />
        <Image  Name="addColumnImage" Width="16" Height="16" HorizontalAlignment="Right" Margin="0,0,5,0"  MouseUp="addColumnImage_MouseUp" ToolTip="Insert column" Source="/SQLdmDesktopClient;component/Resources/Chart/column_add_after.png" />
        <Image  Name="deleteColumnImage" Grid.Column="1"  Width="16" Height="16" HorizontalAlignment="Left" Margin="5,0,0,0"  ToolTip="Delete column" MouseUp="deleteColumnImage_MouseUp" Source="/SQLdmDesktopClient;component/Resources/Chart/column_delete.png" />
     </Grid>
</UserControl>
